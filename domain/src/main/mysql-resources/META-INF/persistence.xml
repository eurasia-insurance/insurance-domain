		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<validation-mode>NONE</validation-mode>

		<properties>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create" />
			<property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create" />
			<property name="javax.persistence.schema-generation.scripts.create-target" value="./src/sql/mysql/insurance-schema-create-1.14.ddl"/>
			<property name="javax.persistence.schema-generation.scripts.drop-target" value="./src/sql/mysql/insurance-schema-drop-1.14.ddl"/>
			<property name="eclipselink.logging.parameters" value="true" />
			<property name="eclipselink.weaving" value="static" />
