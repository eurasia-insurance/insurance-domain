<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
	version="2.1">

	<persistence-unit name="insurancePU" transaction-type="JTA">

		<jta-data-source>insurance/jdbc/DataSource_MYSQL</jta-data-source>

		<class>tech.lapsa.javax.jpa.converters.CurrencyAttributeConverter</class>
		<class>tech.lapsa.javax.jpa.converters.InstantAttributeConverter</class>
		<class>tech.lapsa.javax.jpa.converters.LocalDateAttributeConverter</class>
		<class>tech.lapsa.javax.jpa.converters.LocalDateTimeAttributeConverter</class>
		<class>tech.lapsa.javax.jpa.converters.LocalTimeAttributeConverter</class>
		<class>tech.lapsa.javax.jpa.converters.LocaleAttributeConverter</class>

		<class>tech.lapsa.kz.taxpayer.converter.jpa.TaxpayerNumberAttributeConverter</class>
		<class>tech.lapsa.kz.vehicle.converter.jpa.VehicleRegNumberAttributeConverter</class>

		<class>com.lapsa.international.phone.converter.jpa.PhoneNumberAttributeConverter</class>

		<class>tech.lapsa.insurance.domain.Amount</class>
		<class>tech.lapsa.insurance.domain.Calculation</class>
		<class>tech.lapsa.insurance.domain.Contract</class>
		<class>tech.lapsa.insurance.domain.CreationParameteredIntIdEntitySuperclass</class>
		<class>tech.lapsa.insurance.domain.IntIdEntitySuperclass</class>
		<class>tech.lapsa.insurance.domain.Lead</class>
		<class>tech.lapsa.insurance.domain.LeadAttachement</class>
		<class>tech.lapsa.insurance.domain.Payment</class>
		<class>tech.lapsa.insurance.domain.PaymentOrder</class>
		<class>tech.lapsa.insurance.domain.PersonalInformation</class>
		<class>tech.lapsa.insurance.domain.PolicyCalculation</class>
		<class>tech.lapsa.insurance.domain.PolicyCalculationDriver</class>
		<class>tech.lapsa.insurance.domain.PolicyCalculationVehicle</class>
		<class>tech.lapsa.insurance.domain.CascoCalculation</class>
		<class>tech.lapsa.insurance.domain.CascoCalculationVehicle</class>

		<class>tech.lapsa.insurance.jpa.InsuranceVersion</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<validation-mode>NONE</validation-mode>

		<properties>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create" />
			<property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create" />
			<property name="javax.persistence.schema-generation.scripts.create-target" value="./src/sql/mysql/insurance-schema-create-4.0.ddl" />
			<property name="javax.persistence.schema-generation.scripts.drop-target" value="./src/sql/mysql/insurance-schema-drop-4.0.ddl" />
			<property name="eclipselink.logging.parameters" value="true" />
			<property name="eclipselink.weaving" value="static" />
		</properties>

	</persistence-unit>

</persistence>
