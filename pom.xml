	<parent>
		<groupId>tech.lapsa.maven</groupId>
		<artifactId>maven-general</artifactId>
		<version>3.1</version>
	</parent>

	<groupId>com.lapsa.insurance-lib</groupId>
	<artifactId>insurance-root</artifactId>
	<version>2.4-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>Insurance Lib</name>

	<modules>
		<module>elements</module>
		<module>domain</module>
	</modules>

	<properties>
		<!-- BOMS -->
		<javax-javaee-bom.version>7.0a-SNAPSHOT</javax-javaee-bom.version>
		<java-commons.version>1.1-SNAPSHOT</java-commons.version>
		<payara-bom.version>4.1.2-2-SNAPSHOT</payara-bom.version>
		<!-- tech -->
		<javax-jpa-commons.version>1.1-SNAPSHOT</javax-jpa-commons.version>
		<javax-validation-commons.version>1.1-SNAPSHOT</javax-validation-commons.version>
		<patterns-domain.version>1.0-SNAPSHOT</patterns-domain.version>
		<lapsa-arquillian-test.version>1.1-SNAPSHOT</lapsa-arquillian-test.version>
		<insurance-validation.version>1.0-SNAPSHOT</insurance-validation.version>
		<!-- oldies -->
		<kz-lib.version>3.2-SNAPSHOT</kz-lib.version>
		<international-lib.version>3.3-SNAPSHOT</international-lib.version>
		<lapsa-lib.version>2.2</lapsa-lib.version>
		<!-- PLUGINS dependencies versions -->
		<!-- version number copied from javax-javaee-web-bom -->
		<javax.persistence.version>2.1.0</javax.persistence.version>
		<!-- version number copied from payara-bom -->
		<eclipselink.version>2.6.4.payara-p2</eclipselink.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<!-- BOMS -->
			<dependency>
				<groupId>tech.lapsa.javax</groupId>
				<artifactId>javax-javaee-bom</artifactId>
				<version>${javax-javaee-bom.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>tech.lapsa.java</groupId>
				<artifactId>java-commons-root</artifactId>
				<version>${java-commons.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>tech.lapsa.payara</groupId>
				<artifactId>payara-bom</artifactId>
				<version>${payara-bom.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<!-- tech -->
			<dependency>
				<groupId>tech.lapsa.javax</groupId>
				<artifactId>javax-jpa-commons</artifactId>
				<version>${javax-jpa-commons.version}</version>
			</dependency>
			<!-- tech -->
			<dependency>
				<groupId>tech.lapsa.javax</groupId>
				<artifactId>javax-validation-commons</artifactId>
				<version>${javax-validation-commons.version}</version>
			</dependency>
			<dependency>
				<groupId>tech.lapsa.patterns</groupId>
				<artifactId>patterns-domain</artifactId>
				<version>${patterns-domain.version}</version>
			</dependency>
			<dependency>
				<groupId>tech.lapsa.lapsa</groupId>
				<artifactId>lapsa-arquillian-test</artifactId>
				<version>${lapsa-arquillian-test.version}</version>
			</dependency>
			<dependency>
				<groupId>tech.lapsa.insurance</groupId>
				<artifactId>insurance-validation</artifactId>
				<version>${insurance-validation.version}</version>
			</dependency>
			<!-- own -->
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>insurance-elements</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>insurance-domain</artifactId>
				<version>${project.version}</version>
			</dependency>
			<!-- oldies -->
			<dependency>
				<groupId>com.lapsa.kz-lib</groupId>
				<artifactId>kz-root</artifactId>
				<version>${kz-lib.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>com.lapsa.international-lib</groupId>
				<artifactId>international-root</artifactId>
				<version>${international-lib.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>com.lapsa.lapsa-lib</groupId>
				<artifactId>lapsa-root</artifactId>
				<version>${lapsa-lib.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
